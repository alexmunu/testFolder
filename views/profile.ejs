<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> TwitTrack</h1>
        <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- TWITTER INFORMATION -->
        <div class="col-md-6 col-lg-push-3">
            <div class=" panel-group">
                <div class="page-header text-center"><h3 class="text-info"><span class="fa fa-twitter"><img
                                    src="/images/twitter_logo_blue.png" width="32px" height="32px"></span> Profile</h3>
                </div>
                <div class="row">
                    <div class="col-lg-2">
                        <img src="<%= user._json.profile_image_url %>" class="img-circle" width="48px" height="48px">
                    </div>
                    <div class="col-lg-10">
                        <strong>Username</strong>: @<%= user.username %><br>
                        <strong>Displayed Name</strong>: <%= user.displayName %><br><br><br>

                        <p class="text-center"><span><strong>Description</strong><br></span><span ><%=user._json.description %></span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-lg-push-3">
            <p class="text-center">Hello, <%= user.username %>. <a class="text-success" href="/index">Start demo application</a></p>
        </div>
    </div>

</div>